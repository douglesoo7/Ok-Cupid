<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="30dp"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/ivBackSignUpPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/back_arrow" />

    <TextView
        android:id="@+id/tvAboutYouSignUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Ideal Person"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvInterestedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAboutYouSignUpEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_medium"
        android:text="I am looking for..."
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold" />


    <CheckBox
        android:layout_below="@id/tvInterestedIn"
        android:id="@+id/cbInterestedInMen"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Men"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="10dp"/>

    <CheckBox
        android:id="@+id/cbInterestedInWomen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Women"
        android:layout_below="@+id/cbInterestedInMen"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="10dp"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/btnInterestedInNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:padding="15dp"
        android:text="NEXT"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"/>






</RelativeLayout>
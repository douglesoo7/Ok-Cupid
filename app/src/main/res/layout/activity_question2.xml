<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="30dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tvQ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_medium"
        android:text="How important is religion/God in your life?"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="200dp"
        android:id="@+id/tvQ2Option1"
        android:elevation="10dp"
        android:background="#C0C0C0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Extremely Important"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/tvQ2Option2"
        android:elevation="10dp"
        android:layout_below="@+id/tvQ2Option1"
        android:background="#C0C0C0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:text="Somewhat Important"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvQ2Option3"
        android:elevation="10dp"
        android:layout_below="@+id/tvQ2Option2"
        android:background="#C0C0C0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:text="Not Very Important"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvQ2Option4"
        android:layout_below="@+id/tvQ2Option3"
        android:background="#C0C0C0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:text="Not Important At All"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/tvQ2Skip"
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQ2Option4"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="Skip this question"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#6666FF"
        />


</RelativeLayout>
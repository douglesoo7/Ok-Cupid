<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECEC"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="center"
        android:textSize="28dp"
        android:text="My ideal Person"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yourprofile"
        android:layout_width="363dp"
        android:layout_height="82dp"
        android:layout_below="@id/textView"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:background="#F86EA0"
        android:gravity="center"
        android:text="Your preferences"
        android:textSize="34dp"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView14"
        android:layout_below="@id/yourprofile"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/scroll">

            <TextView
                android:id="@+id/b1"
                android:layout_width="77dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="288dp"
                android:text="BASICS"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/im1"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:paddingLeft="6dp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                app:layout_constraintEnd_toStartOf="@+id/b1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/im1">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="32dp"
                        android:layout_margin="11dp"
                        android:gravity="center"
                        android:text="Gender"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/imageBun"
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="360dp"
                        android:layout_marginTop="-49dp"
                        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

                    <TextView
                        android:layout_width="94dp"
                        android:id="@+id/g1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="-42dp"
                        android:gravity="center"
                        android:paddingLeft="34dp"
                        android:text="Male"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="2dp"
                        android:background="#EDECEC" />

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="6dp"
                        android:gravity="left"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Age"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/imageBun1"
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="360dp"
                        android:layout_marginTop="-37dp"
                        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

                    <TextView
                        android:layout_width="94dp"
                        android:layout_height="40dp"
                        android:id="@+id/Ag1"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="-40dp"
                        android:gravity="center"
                        android:paddingLeft="34dp"
                        android:text="Male"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:background="#EDECEC" />

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Distance"
                        android:textSize="17dp" />

                    <ImageButton
                        android:id="@+id/imageBun2"
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="360dp"
                        android:layout_marginTop="-38dp"
                        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

                    <TextView
                        android:layout_width="94dp"
                        android:id="@+id/d1"
                        android:layout_height="40dp"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="-44dp"
                        android:gravity="center"
                        android:paddingLeft="34dp"
                        android:text="Male"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="10dp"
                        android:background="#EDECEC"
                        android:text="Distance" />


                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="32dp"
                        android:layout_margin="11dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Connection"
                        android:textSize="16dp" />

                    <ImageButton
                        android:id="@+id/imageBun3"
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="360dp"
                        android:layout_marginTop="-52dp"
                        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

                    <TextView
                        android:layout_width="94dp"
                        android:layout_height="40dp"
                        android:id="@+id/cnx"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="-42dp"
                        android:gravity="center"
                        android:paddingLeft="34dp"
                        android:text="Male"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="92dp"
                android:layout_height="32dp"
                android:paddingTop="4dp"
                android:text="LOOKS"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/im2"
                app:layout_constraintTop_toBottomOf="@+id/card1" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:paddingLeft="6dp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/im2">

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="32dp"
                        android:layout_margin="14dp"
                        android:gravity="center"
                        android:text="Height"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/imageBun4"
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="360dp"
                        android:layout_marginTop="-52dp"
                        app:srcCompat="@drawable/ic_baseline_arrow_right_24" />

                    <TextView
                        android:layout_width="94dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="-42dp"
                        android:gravity="center"

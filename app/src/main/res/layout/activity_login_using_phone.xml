<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="30dp"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/ivBackLoginUsingPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/back_arrow" />

    <TextView
        android:id="@+id/tvSignInUsingPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Sign in with your phone number"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/cCPLoginUsingPhone"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:background="#101010"
        android:elevation="5dp"
        android:outlineSpotShadowColor="@color/white"
        android:padding="10dp"
        android:textAlignment="center"
        app:ccp_contentColor="@color/white"
        app:ccp_showFlag="false"
        app:ccp_showNameCode="false" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPhone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/cCPLoginUsingPhone"
        android:background="@color/white"
        android:elevation="5dp"
        android:textAlignment="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLoginUsingPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#101010"
            android:inputType="number"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="22sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvLoginUsingPhoneDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cCPLoginUsingPhone"
        android:layout_marginTop="10dp"
        android:text="We will send a text with a verification code. Message\n and data rates may apply."
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnLoginUsingPhoneNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginUsingPhoneDesc"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:padding="15dp"
        android:text="NEXT"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:layout_marginHorizontal="20dp"
        android:id="@+id/viewLine1"
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:layout_above="@id/btnLoginUsingPhoneLogInUsingEmail"
        android:layout_marginBottom="10dp"
        android:background="@color/white" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="or"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/viewLine1"
        android:layout_above="@+id/btnLoginUsingPhoneLogInUsingEmail"/>

    <View
        android:layout_marginHorizontal="20dp"
        android:layout_width="130dp"
        android:layout_height="2dp"
        android:layout_above="@id/btnLoginUsingPhoneLogInUsingEmail"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:background="@color/white" />

    <Button
        android:id="@+id/btnLoginUsingPhoneLogInUsingEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="#0000FF"
        android:padding="15dp"
        android:text="LOG IN WITH EMAIL"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
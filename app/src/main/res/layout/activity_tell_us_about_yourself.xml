<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tvTellUsAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:text="Tell us about yourself"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSoWeCan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:text="So we can find people who like you\n for you"
        android:layout_below="@+id/tvTellUsAbout"
        android:textSize="20dp"
        android:layout_margin="6dp"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/about_yourself"
        android:layout_centerInParent="true" />


    <Button
        android:id="@+id/btnTellUsAboutNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="#0000FF"
        android:padding="15dp"
        android:text="NEXT"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

</RelativeLayout>
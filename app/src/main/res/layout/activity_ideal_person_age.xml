<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="30dp"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/tvIdealPersonAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Ideal Person"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvHowOldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIdealPersonAge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_medium"
        android:text="How old should they be?"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spAgeFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tvDash"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvDash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spAgeTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvDash"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:padding="5dp" />


    <Button
        android:id="@+id/btnInterestedInNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:padding="15dp"
        android:text="NEXT"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>
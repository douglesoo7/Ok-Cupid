<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/logoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:shadowColor="@color/white"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="5.0"
        android:text="okcupid"
        android:textColor="#11209F"
        android:textSize="30dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:text="SIGN IN"
        android:textColor="#FF66FF"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/ivFindMyKind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoHome"
        android:src="@drawable/findmykind" />

    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivFindMyKind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/lobster"
        android:layout_centerVertical="true"
        android:text="                              By Continuing, you agree to our Terms. Learn how we process your data in \n                                                             our Privacy Policy and Cookies Policy."
        android:textColor="@color/white"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:backgroundTint="#0000FF"
        android:text="JOIN OKCUPID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTerms"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:padding="15dp"/>

</RelativeLayout>